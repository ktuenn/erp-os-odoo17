<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_lines_tree_view" model="ir.ui.view">
        <field name="name">purchase.order.lines.tree.view</field>
        <field name="model">purchase.order.line</field>
        <field name="arch" type="xml">
            <tree string="Purchase Order Lines" editable="top" multi_edit="1">
                <field name="product_id"/>
                <field name="name"/>
                <field name="product_qty"/>
                <field name="price_unit"/>
                <field name="taxes_id"/>
                <field name="price_subtotal" widget="monetary"/>
            </tree>
        </field>
    </record>

    <record id="action_purchase_order_lines_menu" model="ir.actions.act_window">
        <field name="name">action.purchase.order.lines.menu</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.line</field>
        <field name="view_id" ref="purchase_order_lines_tree_view"/>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Purchase Order Lines" id="purchase_order_lines_menu_item" parent="purchase.purchase_report_main" action="action_purchase_order_lines_menu"/>
    
</odoo>